<h1>Listing yards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @yards.each do |yard| %>
      <tr>
        <td><%= link_to 'Show', yard %></td>
        <td><%= link_to 'Edit', edit_yard_path(yard) %></td>
        <td><%= link_to 'Destroy', yard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

