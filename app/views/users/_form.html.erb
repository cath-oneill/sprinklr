<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Name: 
    <%= f.text_field :name %></label>
  </div>
  <div class="field">
    <label>Address: 
    <%= f.text_field :address %></label>
  </div>
  <div class="field">
    <label>Zip: 
    <%= f.text_field :zip %></label>
  </div>
  <div class="field">
    <label>Your Preferred Contact Method: 
    <%= f.select :contact_method, options_for_select([
        ["Please select:", "no selection"],
        ["Weekly Email", "email"],
        ["Weekly Text", "text"],
        ["No Weekly Contact -- I'll check my recommendations online.", "decline"] ], f.object.contact_method
      ) %></label>
  </div>
  <div class="field">
    <label>Email: 
    <%= f.text_field :email %></label>
  </div>
  <div class="field">
    <label for="">Phone:
    <%= f.text_field :phone %></label>
  </div>
  <div class="actions">
    <%= f.submit(:class => "button radius", value: "Save Information") %>
  </div>
<% end %>
